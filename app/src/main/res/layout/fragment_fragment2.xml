                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/Remote_EditText_Joint2y"
                android:hint="@string/Remote_Control"
                android:inputType="number"
                android:textAlignment="center"
                />
            <Button
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:text="@string/Remote_Next"
                android:id="@+id/Remote_Button_Joint2y_Next"
                android:textSize="25sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Remote_J3"
                android:id="@+id/Remote_TextView_Joint3z"
                android:textSize="25sp"
