<?xml version="1.0" encoding="utf-8"?>
<!--Remote Tab-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="150dp"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            >
            <TableRow>
                <ImageButton
                    android:id="@+id/xy_north_west_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_north_west_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
                <ImageButton
                    android:id="@+id/xy_north_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_upward_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
                <ImageButton
                    android:id="@+id/xy_north_east_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_north_east_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
            </TableRow>

            <TableRow>
                <ImageButton
                    android:id="@+id/xy_west_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
                <ImageView
                    android:id="@+id/xy_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_circle_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
                <ImageButton
                    android:id="@+id/xy_east_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_forward_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
            </TableRow>

            <TableRow>
                <ImageButton
                    android:id="@+id/xy_south_west_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_south_west_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
                <ImageButton
                    android:id="@+id/xy_south_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_downward_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
                <ImageButton
                    android:id="@+id/xy_south_east_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_south_east_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
            </TableRow>

            <TextView
                android:text="@string/Remote_XYRC"
                android:textSize="30sp"
                android:textAlignment="center"
                />
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            >
            <TableRow>
                <ImageButton
                    android:id="@+id/xz_north_west_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_north_west_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
                <ImageButton
                    android:id="@+id/xz_north_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_upward_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
                <ImageButton
                    android:id="@+id/xz_north_east_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_north_east_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
            </TableRow>

            <TableRow>
                <ImageButton
                    android:id="@+id/xz_west_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
                <ImageView
                    android:id="@+id/xz_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_circle_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
                <ImageButton
                    android:id="@+id/xz_east_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_forward_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
            </TableRow>

            <TableRow>
                <ImageButton
                    android:id="@+id/xz_south_west_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_south_west_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
                <ImageButton
                    android:id="@+id/xz_south_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_downward_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
                <ImageButton
                    android:id="@+id/xz_south_east_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_south_east_24"
                    android:background="@null"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/Remote_BT_Description"
                    />
            </TableRow>

            <TextView
                android:text="@string/Remote_XZRC"
                android:textSize="30sp"
                android:textAlignment="center"
                />
        </TableLayout>

    </LinearLayout>

</FrameLayout>